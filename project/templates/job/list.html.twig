{% extends 'base.html.twig' %}

{% block title %}Hello Home Route!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% if jobs is empty %}
            <h2>No jobs found!</h2>
        {% endif %}
        {% for job in jobs %}
            <p>{{ job.title }}</p>
        {% endfor %}
    </div>
{% endblock %}
