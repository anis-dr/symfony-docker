{% extends 'base.html.twig' %}

{% block title %}Hello Home Route!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% if job is empty %}
            <h2>No job found!</h2>
        {% else %}
            <p>Title: {{ job.title }}</p>
            <p>Description: {{ job.description }}</p>

            {% if candidatures is empty %}
                <p>No candidatures found!</p>
            {% else %}
                <p>Candidatures:</p>
                <ul>
                    {% for candidature in candidatures %}
                        <li>{{ candidature.condidat }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
